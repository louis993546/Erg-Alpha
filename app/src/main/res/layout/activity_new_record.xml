<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="io.github.louistsaitszho.erg2.gui.NewRecordActivity">

    <LinearLayout
        android:id="@+id/LLDuration"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDuration"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Duration" />

        <EditText
            android:id="@+id/editDurationHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Hour"
            android:inputType="number"
            android:nextFocusDown="@+id/editDurationMinute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <EditText
            android:id="@+id/editDurationMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Minute"
            android:inputType="number"
            android:nextFocusDown="@+id/editDurationSecond" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <EditText
            android:id="@+id/editDurationSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Second"
            android:inputType="number"
            android:nextFocusDown="@+id/editDistance" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLDistance"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LLDuration"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDistance"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Distance" />

        <EditText
            android:id="@+id/editDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Meter"
            android:inputType="numberDecimal"
            android:nextFocusDown="@+id/editDateYear" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLDate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LLDistance"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textDate"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Date" />

        <EditText
            android:id="@+id/editDateYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Year"
            android:inputType="number"
            android:nextFocusDown="@+id/editDateMonth" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <EditText
            android:id="@+id/editDateMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Month"
            android:inputType="number"
            android:nextFocusDown="@+id/editDateDay" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <EditText
            android:id="@+id/editDateDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Day"
            android:inputType="number"
            android:nextFocusDown="@+id/editTimeHour" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LLDate"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textTime"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Time" />

        <EditText
            android:id="@+id/editTimeHour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Hour"
            android:inputType="number"
            android:nextFocusDown="@+id/editTimeMinute" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <EditText
            android:id="@+id/editTimeMinute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Minute"
            android:inputType="number"
            android:nextFocusDown="@+id/editRating" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/LLRating"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LLTime"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textRating"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="Rating" />

        <EditText
            android:id="@+id/editRating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ems="10"
            android:hint="Stroke/minute"
            android:inputType="number" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LLRating"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
